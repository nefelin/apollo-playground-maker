{
  "name": "apollo-playground-maker",
  "version": "0.2.4",
  "description": "A graphql-codegen plugin that generates apollo-server playground tab definitions based on gql documents (and optionally supplied query variables).",
  "main": "src/main.js",
  "scripts": {
    "clean": "rimraf generated",
    "test-main": "graphql-codegen --config codegen-main.yml",
    "test-legacy": "graphql-codegen --config codegen-legacy.yml",
    "test-single-file": "graphql-codegen --config codegen-single-file.yml",
    "test:all": "npm run clean && npm run test-main && npm run test-legacy && npm run test-single-file"
  },
  "keywords": [
    "apollo",
    "playground",
    "plugin"
  ],
  "author": "Eric Michael Lindgren",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.4",
    "graphql": "^15.5.0",
    "graphql-codegen": "^0.4.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "colors": "^1.4.0"
  },
  "peerDependencies": {
    "@graphql-codegen/cli": "1.21.4",
    "graphql": "^15.5.0",
    "graphql-codegen": "^0.4.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "files": [
    "src"
  ]
}
